# Authentication (required)
# Generate with: npx auth secret
AUTH_SECRET=

# Database - Turso (required)
# Get credentials at: https://turso.tech
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=

# Encryption for API key storage (required)
# Generate with: openssl rand -base64 32
ENCRYPTION_SECRET=

# Google OAuth (optional)
# Setup at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple OAuth (optional)
# Setup at: https://developer.apple.com/account/resources/identifiers/list
APPLE_ID=com.yourapp.web
APPLE_TEAM_ID=
APPLE_KEY_ID=
# Generate APPLE_SECRET with: npx tsx scripts/generate-apple-secret.ts
# Requires APPLE_PRIVATE_KEY_PATH to point to your .p8 file
APPLE_PRIVATE_KEY_PATH=./AuthKey_XXXXXXXX.p8
APPLE_SECRET=
